<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="18dp"
    android:paddingVertical="40dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_chatting_img_cardView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/item_song_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/item_chatting_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="채팅방 이름"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@id/item_chatting_img_cardView"
        app:layout_constraintTop_toTopOf="@id/item_chatting_img_cardView" />

    <TextView
        android:id="@+id/end_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="모집 마감"
        app:layout_constraintTop_toBottomOf="@+id/item_chatting_date_tv"
        tools:layout_editor_absoluteX="62dp" />

    <TextView
        android:id="@+id/recurit_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="23.11.27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.922"
        app:layout_constraintStart_toEndOf="@+id/item_chatting_date_tv"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_password_check_underscore_view" />

    <TextView
        android:id="@+id/real_member_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12명"
        android:textColor="@color/bold_gray"
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/recurit_mem_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/25명"
        android:textColor="@color/bold_gray"
        app:layout_constraintBottom_toTopOf="@+id/sign_up_password_check_underscore_view"
        app:layout_constraintTop_toTopOf="@+id/item_chatting_title_tv"
        tools:layout_editor_absoluteX="308dp" />

    <TextView
        android:id="@+id/item_chatting_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:text="목표 기간"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/item_chatting_img_cardView"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_password_check_underscore_view" />

    <View
        android:id="@+id/sign_up_password_check_underscore_view"
        android:layout_width="299dp"
        android:layout_height="6dp"
        android:background="#a8a8a8"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="34dp"
        />

    <TextView
        android:id="@+id/goal_limit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="4dp"
        android:text="4주"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recurit_mem_tv"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>